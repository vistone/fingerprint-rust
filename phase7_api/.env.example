# Browser Fingerprint API Configuration

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Logging
LOG_LEVEL=info

# Models directory
MODELS_DIR=./models

# Dataset directory (for validation)
DATASET_DIR=./dataset

# Admin API key for sensitive operations
ADMIN_API_KEY=admin_key_phase7_4

# Feature scaling
ENABLE_FEATURE_SCALING=true

# Model cache settings
MODEL_CACHE_DIR=./models_cache
ENABLE_MODEL_CACHE=true

# Performance settings
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30  # seconds

# Security
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ENABLE_CORS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Database (future)
DATABASE_URL=postgresql://user:password@localhost/fingerprint_db
